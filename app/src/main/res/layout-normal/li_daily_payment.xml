<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/sz_h_li_daily_payment_root"
              android:background="@android:color/white"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/li_daily_payment_tv_type"
        android:layout_width="@dimen/sz_w_li_daily_payment_tv_type"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/size_txt_normal"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sz_mb_li_daily_payment_line"
        android:layout_marginTop="@dimen/sz_mt_li_daily_payment_line"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_h_li_daily_payment_title_time"
            android:layout_marginEnd="@dimen/size_dp_1p2"
            android:layout_marginLeft="@dimen/size_dp_1p2"
            android:layout_marginRight="@dimen/size_dp_1p2"
            android:layout_marginStart="@dimen/size_dp_1p2"
            android:layout_marginTop="@dimen/sz_mt_li_daily_payment_line">

            <TextView
                android:id="@+id/li_daily_payment_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/li_daily_payment_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/app_name"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/li_daily_payment_tv_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_h_li_daily_payment_money"
            android:layout_marginEnd="@dimen/size_dp_1p2"
            android:layout_marginLeft="@dimen/size_dp_1p2"
            android:layout_marginRight="@dimen/size_dp_1p2"
            android:layout_marginStart="@dimen/size_dp_1p2"
            android:singleLine="true"
            android:text="@string/app_name"/>
    </LinearLayout>

</LinearLayout>